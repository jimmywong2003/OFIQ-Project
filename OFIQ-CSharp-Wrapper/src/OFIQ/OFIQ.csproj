  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\OFIQ.Core\OFIQ.Core.csproj" />
    <ProjectReference Include="..\OFIQ.Native\OFIQ.Native.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
  </ItemGroup>

</Project>
